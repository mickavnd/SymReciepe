{% extends "base.html.twig" %}

{% block body %}


	<div class="container mt-4">
		{% if not recipes.items is same as ([])  %}
			<h1>recette de la communaut√©</h1>

			<div class="carte">
				{% for recipe in recipes %}

					<div class="card mb-3">
						<h3 class="card-header">Recette numero{{recipe.id}}</h3>
						<div class="card-body">
							<h5 class="card-title">{{recipe.name}}</h5>
						</div>
						<div class="recipe_images">
							<img style="max-width: 500px;" src="{{vich_uploader_asset(recipe,'imageFile')}}" alt="">
						</div>

						<div class="card-body">
							<p class="card-text">{{recipe.description|slice(0, 50) ~ '...' }}</p>
						</div>

						<div class="card-body">
							<a href="#" class="card-link">Card link</a>
							<a href="#" class="card-link">Another link</a>
						</div>
						<div class="card-footer text-muted">
							2 days ago
						</div>
					</div>

				{% endfor %}
			</div>
			<div class="navigation d-flex justify-content-center mt-4">
				{{ knp_pagination_render(recipes) }}
			</div<h4> {% else %}
			il n'y a pas de recettes</h4>
	{% endif %}


{% endblock %}

