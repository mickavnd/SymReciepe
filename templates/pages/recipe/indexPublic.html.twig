{% extends "base.html.twig" %}

{% block body %}


	<div class="container mt-4">
		{% if not recipes.items is same as ([])  %}
			<h1>recette de la communaut√©</h1>

			<div class="carte">
				{% for recipe in recipes %}

					<div class="card mb-3">
						<h3 class="card-header">Recette numero{{recipe.id}}</h3>
						<div class="card-body">
							<h5 class="card-title">{{recipe.name}}</h5>
						</div>
						{% if recipe.imageName == false %}

							<svg xmlns="http://www.w3.org/2000/svg" class="d-block user-select-none" width="100%" height="200" aria-label="Placeholder: Image cap" focusable="false" role="img" preserveaspectratio="xMidYMid slice" viewbox="0 0 318 180" style="font-size:1.125rem;text-anchor:middle">
								<rect width="100%" height="100%" fill="#868e96"></rect>
								<text x="50%" y="50%" fill="#dee2e6" dy=".3em">Image cap</text>
							</svg>

						{% else %}

							<div class="recipe_images">
								<img style="max-width: 400px;" src="{{vich_uploader_asset(recipe,'imageFile')}}" alt="">
							</div>

						{% endif %}


						<div class="card-body">
							<p class="card-text">{{recipe.description|slice(0, 50) ~ '...' }}</p>
						</div>

						<div class="card-body">
							<a href="#" class="card-link">Card link</a>
							<a href="#" class="card-link">Another link</a>
						</div>
						<div class="card-footer text-muted">
							2 days ago
						</div>
					</div>

				{% endfor %}
			</div>
			<div class="navigation d-flex justify-content-center mt-4">
				{{ knp_pagination_render(recipes) }}
			</div<h4>
		{% else %}
			il n'y a pas de recettes</h4>
	{% endif %}


{% endblock %}

