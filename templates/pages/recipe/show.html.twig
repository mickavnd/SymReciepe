{% extends "base.html.twig" %}

 {% block Title %}SymRecipe - {{recipe.name}}{% endblock %}

{% block body %}

<div class="container">
<h1 class=" mt-4">{{recipe.name}} </h1>
<div class="recipe_images">
 <img  style="max-width: 500px;" src="{{vich_uploader_asset(recipe,'imageFile')}}" alt="">
</div>

{% for message in app.flashes('success') %}
				<div class=" alert alert-success mt-4">
					{{message}}
				</div>
{% endfor %}
	
<span class="badge bg-primary">Créer le {{recipe.creatAt|date('d/m/Y')}}</span>

 <p> la moyenne  de cette recette est  de : {{recipe.average |number_format(2,'.',',')}} /5</p> 

 {% if recipe.time %}
 <p>temps (en minute) :{{recipe.time |min_to_hour}}</p>
 {% else %}
 <p> temps  non renseigner</p>
 {% endif %}
  

 {% if recipe.nbPeople %}
<p class="mt-4">pour{{recipe.nbPeople}} personne</p>
 {% else %}
 <p class="mt-4">nombre de personne nom renseigner</p>
 {% endif %}

{% if recipe.difficutly %}
<p class="mt-4">dificulté :
{{recipe.difficutly}} /5</p>
 {% else %}
 <p class="mt-4"> difficulter non renseinger</p>
 {% endif %}

{% if recipe.price %}
 <p class="mt-4">Prix :
 {{recipe.price}}  euro </p>
 {% else %}
 <p class="mt-4"> pas de prix renseigner</p>
 {% endif %}

<div>
{{recipe.description |raw }}
</div>

<p class="mt-4"> ingredients</p>
{% for ingredient in recipe.ingredient %}

<span class="badge bg-primary">C {{ingredient.name}}</span>
    
{% endfor %}

<div class="mark">

{{ form(form) }}

</div>

</div>

{% endblock %}